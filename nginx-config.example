# Nginx конфигурация для Ozon Parser API
# Размещается в: /etc/nginx/sites-available/ozon-parser-api

server {
    listen 80;
    server_name your-domain.com;  # Замените на ваш домен или IP

    # Логирование
    access_log /var/log/nginx/ozon-parser-api-access.log;
    error_log /var/log/nginx/ozon-parser-api-error.log;

    # Ограничение размера запроса
    client_max_body_size 10M;

    # Таймауты
    proxy_connect_timeout 600;
    proxy_send_timeout 600;
    proxy_read_timeout 600;
    send_timeout 600;

    # Проксирование на API сервер
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support (если понадобится)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # Ограничение доступа к API (опционально)
    # Разрешить только определённым IP
    # allow 192.168.1.0/24;
    # allow 10.0.0.0/8;
    # deny all;
}

